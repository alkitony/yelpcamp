<% include /partials/header %>

<div class="container">
    <div class="well well-sm">
        <div class="row">
            <h2 class="formTitle">Login Screen</h2>
            <div class="formStyle">
                <form action="/login" method="POST">
                    <div class="form-group">
                       <input class="form-control" type="text" name="username" placeholder="Please provide a valid username">
                    </div>
                    <div class="form-group">
                       <input type="password" class="form-control" name="password" placeholder="Please provide a password">
                    </div>
                    <div class="form-group">
                       <button class="btn btn-lg btn-primary btn-block">Login</button>
                    </div>
                </form>
                <p>
                    <a href="/forgot">Forgot Password</a>
                    <a class="pull-right" href="/campgrounds">View Campgrounds</a>
                </p>
            </div>
        </div>
    </div>
</div>

<% include /partials/footer %>
