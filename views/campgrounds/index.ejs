<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View hand pick campground from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="/yelpcamp">Home Page</a>   
            <a class="btn btn-primary btn-large" href="campgrounds/new">Enter New Campground</a>
        </p>
    </header>

    <div class="row text-center campgrid">
        <% campgroundList.forEach(function(campground) { %>
            <div class="col-md-3 col-xs-12">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" />
                    <!--div class="bg-image" style="background-size: cover;background-image: url(' campground.image');width: 100%;height: 100%;padding-bottom: 56.25%;background-position: 50%;"></div-->
                    <div class="caption" style="min-height: 76px">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="campgrounds/<%= campground._id %>">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>

    </div>

</div>

<% include ../partials/footer %>